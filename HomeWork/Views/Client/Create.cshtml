@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Fill in the following form</h3>
</div>
<form method="post" style="margin: 5% 0 0">
    <table>
        <tr>
        <td>Client ID:  </td>
            <td><input type="text" style="margin: 1px 0 2px" name="id" /><br /></td>
        </tr>
        <tr>
        <td>Name:  </td>
            <td><input type="text" style="margin: 1px 0 2px" name="name" /><br /></td>
        </tr>
        <tr>
        <td>Address:  </td>
            <td><input type="text" style="margin: 1px 0 2px" name="address" /><br /></td>
        </tr>
        <tr>
        <td>Trusted:  </td>
            <td><input type="checkbox" style="margin: 1px 0 2px" name="trusted" /><br /></td>
        </tr>
        <tr></tr>
    </table>
    <div class="float-right">
        <input type="submit" value="Save" />
    </div>
</form>

<p>
    @if (ViewBag.Submitted)
    {
        // If the form was submitted
        @ViewBag.Message
    }
</p>